{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "removeComments": true,

    /* Preact Config */
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": ["./index.ts", "src/**/*.ts", "src/**/*.tsx", "./global.d.ts"]
}
